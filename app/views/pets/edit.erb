<h1>Update Pet</h1>

<form action="/pets" method="post">
  <input type="hidden" name="_method" value="patch"/>
  <input type="hidden" name="pet_id" value="<%=@pet.id%>"/>
  <label>Pet Name:</label> <input type="text" name="pet[name]" id='pet_name' value="<%=@pet.name%>"/>

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%if @pet.owner == owner %>checked<%end%>><%= owner.name %></input>
  <% end %>

  <br/>

  Create a new owner: <br/>

  <input type="text" name="owner[name]" id="owner_name"/><br/>

  <input type="submit" value="Update Pet"/>
</form>
